<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Plant Recognizer</title>
        <link rel="stylesheet" href="css/load.css">
    </head>
    <body>
        <!-- logo -->
        <div class="center">
            <%- include('logo') %>
        </div>

        <!-- loading -->
        <div id="loading">
            <form id="post" action="/result" method="post">
                <img id="img-load" src="" alt=""/>
                <div id="loader"></div>
            </form>
        </div>
    </body>
    <script>
        window.addEventListener('load', function() {
            if(window.localStorage.getItem("imgcropped") !== null) {
                document.getElementById('img-load').src = window.localStorage.getItem("imgcropped");
            }
        });
    </script>
    <script type="text/javascript" src="scripts/jquery/dist/jquery.js"></script>
    <script type="module" src="js/load.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs@2.0.0/dist/tf.min.js"></script>
</html>