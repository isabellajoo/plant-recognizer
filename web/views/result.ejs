<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Plant Recognizer</title>
        <link rel="stylesheet" href="css/result.css">
    </head>
    <body>
    <!-- logo -->
    <%- include('logo') %>

    <div id="main">
        <div id="result">
            <!-- search img -->
            <div id="retry">
                <img id="img-search" src="img/search_temp.jpg" alt=""/>
                <img id="img-return" src="img/return_image_temp.png" alt=""/>
            </div>

            <div id="result-main">
                <div id="result-container01">
                    <div id="slide-container">
                        <!-- previous buttons -->
                        <a id="slide-prev">&#10094;</a>

                        <!-- slideshow container of result img -->
                        <div id="slideshow">
                            <%- include('slideImage') %>
                        </div>

                        <!-- next buttons -->
                        <a id="slide-next">&#10095;</a>
                    </div>
                </div>

                <div id="result-container02">
                    <div id="result-info">
                        <!-- dots -->
                        <%- include('slideDot') %>

                        <!-- result plant information -->
                        <div id="details">
                            <h1 id="result-name">장미</h1>
                            <!-- progress bar -->
                            <div class="result-progress center">
                                <p><progress value="99" max="100"></progress>99%</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="result-others">
            <!-- previous buttons -->
            <a id="scroll-up">&#10094;</a>
            <div id="scroll-container" class="scroll">
                <%- include('resultOther') %>
            </div>
            <!-- next buttons -->
            <a id="scroll-down">&#10095;</a>
        </div>
    </div>
    </body>
    <script type="text/javascript" src="js/slideshow.js"></script>
    <script type="text/javascript" src="js/scroll.js"></script>
    <script type="text/javascript" src="../node_modules/jquery/dist/jquery.js"></script>
</html>